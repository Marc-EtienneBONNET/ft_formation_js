<div class="container-fluid">
	<div class="d-flex flex-column align-items-center justify-content-center w-100" style="height: 100vh ">
		<h1>Formulaire</h1>
		<form class="d-flex flex-column card w-50" method="post" action="/user">
			<div class="card-body">
				<div class="form-group">
					<label>mail</label>
					<input name="mail" class="form-control" type="text"/>
				</div>
				<div class="form-group">
					<label>password</label>
					<input name="password" class="form-control" type="text"/>
				</div>
				<div>
					<input type="submit" value="enregistrer" class="btn btn-primary"/>
				</div>
			</div>
			<div>
				<% if (locals.errors && errors && errors.length) {%>
					<h1>Erreur : </h1>
					<ul>
						<%errors.forEach(err => {%>
							<li><%= err%></li>	
						<%})%>
					</ul>
				<%}%>
			</div>
		</form>
		<form class="d-flex flex-column card w-50" method="get" action="/user">
				<div>
					<input type="submit" value="See users" class="btn btn-primary"/>
					<% if (locals.users && users && users.length) {%>
						<ul>
							<%users.forEach(user => {%>
								<li><%= user.mail%></li>	
							<%})%>
						</ul>
					<%}%>
				</div>
		</form>
</div>